{
  "manifest_version": 3,
  "name": "QuickA11y",
  "version": "1.0.0",
  "description": "Quick accessibility audit and fixes for WCAG compliance. Instantly identify and resolve web accessibility issues.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["report.html", "report.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
